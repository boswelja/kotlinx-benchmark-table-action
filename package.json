{
  "name": "kotlinx-benchmark-table-action",
  "version": "1.0.0",
  "description": "An Action to take info from kotlinx-benchmark outputs and display them in a table as a pull request comment",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build src/main.ts -m -o dist/",
    "test": "npx jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/boswelja/kotlinx-benchmark-table-action.git"
  },
  "author": "Jack Boswell (boswelja)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/boswelja/kotlinx-benchmark-table-action/issues"
  },
  "homepage": "https://github.com/boswelja/kotlinx-benchmark-table-action#readme",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "glob": "^10.3.12"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.12",
    "@vercel/ncc": "^0.38.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.5"
  },
  "jest": {
    "preset": "ts-jest",
    "verbose": true,
    "clearMocks": true,
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testMatch": [
      "__tests__/**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    }
  }
}